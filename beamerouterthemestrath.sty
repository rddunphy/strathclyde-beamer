% Foot line
\defbeamertemplate*{footline}{strath}{
	\ifnum \insertpagenumber=1 % Titlepage
		\leavevmode%
		\hbox{%
			\begin{beamercolorbox}[wd=0.5\paperwidth,ht=2.25ex,dp=1ex,left]{frame controls in title slide}%
			\end{beamercolorbox}%
			\begin{beamercolorbox}[wd=0.5\paperwidth,ht=2.25ex,dp=1ex,right]{frame controls in title slide}%
				\begin{minipage}[c]{3cm}
					\usebeamercolor[fg]{navigation symbols in titlepage}
