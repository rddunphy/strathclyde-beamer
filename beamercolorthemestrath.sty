\mode<presentation>

\definecolor{corpblue}{rgb}{0, 0.1255, 0.3765}
\definecolor{engblue}{rgb}{0.0039, 0.4667, 0.6784}
\definecolor{hassorange}{rgb}{0.9569, 0.4784, 0.1294}
\definecolor{scigreen}{rgb}{0.3647, 0.5882, 0.1922}
\definecolor{sbsred}{rgb}{0.9333, 0.1882, 0.1412}

% corpbluepale = round((corpblue + (ones(size(corpblue))-corpblue).*0.5).*255) ./ 255;
\definecolor{corpbluepale}{rgb}{0.5020, 0.5647, 0.6902}
\definecolor{engbluepale}{rgb}{0.5020, 0.7333, 0.8392}
\definecolor{hassorangepale}{rgb}{0.9804, 0.7412, 0.5647}
\definecolor{scigreenpale}{rgb}{0.6824, 0.7961, 0.5961}
\definecolor{sbsredpale}{rgb}{0.9686, 0.5961, 0.5725}

\colorlet{strathprimary}{corpblue}
\colorlet{strathtint}{corpbluepale}
\DeclareOptionBeamer{eng}{
	\colorlet{strathprimary}{engblue}
	\colorlet{strathtint}{engbluepale}
}
\DeclareOptionBeamer{sci}{
	\colorlet{strathprimary}{scigreen}
	\colorlet{strathtint}{scigreenpale}
}
\DeclareOptionBeamer{hass}{
	\colorlet{strathprimary}{hassorange}
	\colorlet{strathtint}{hassorangepale}
}
\DeclareOptionBeamer{sbs}{
	\colorlet{strathprimary}{sbsred}
	\colorlet{strathtint}{sbsredpale}
}
\ProcessOptionsBeamer

\setbeamercolor*{title page header}{fg=white}
\setbeamercolor*{author}{fg=white}
\setbeamercolor*{date}{fg=white}
\setbeamercolor*{item}{fg=strathprimary}
\setbeamercolor*{frametitle}{fg=white}
\setbeamercolor*{sidebar}{fg=strathprimary}

\setbeamercolor*{title in foot}{fg=strathprimary}
\setbeamercolor*{frame controls}{fg=strathprimary}
\setbeamercolor*{frame controls in title slide}{fg=white}
\setbeamercolor*{section in toc}{fg=strathprimary}

\mode<all>
